@model DDD.MVC.Areas.Sp.ViewModels.ObjIndex

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

	<div class="container">
		<div class="row">
			<form class="form-inline" action="/sp/clients">
				<div class="form-group col-md-4">
					<label class="control-label">Cpf:</label>
					@Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @name="cpf", @class = "form-control" } })
				</div>
				<div class="form-group col-md-4">
					<label class="control-label">BirthDay:</label>
					@Html.EditorFor(model => model.BirthDay, new { htmlAttributes = new {@type="Date", @name = "birthDay", @class = "form-control" } })
				</div>
				<div class="form-group col-md-4">
					<button type="submit" class="btn btn-primary mb-2">Filter</button>
				</div>
			</form>			
		</div>
	</div>

<div>
	<p>
		@Html.ActionLink("Create New", "Create")
	</p>
</div>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Cpf
        </th>
        <th>
            RG
        </th>
        <th>
            BirthDay
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Clients) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cpf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RG)
        </td>
        <td>
			@item.BirthDay.ToString("dd/MM/yyyy")			
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ClientId },new { @class= "btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ClientId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
